unit FrmPrincipal;

interface

uses
  System.SysUtils, System.Classes, Vcl.Forms, Vcl.Menus, ConexaoDM;

type
  TFormPrincipal = class(TForm)
    MainMenu1: TMainMenu;
    MenuItemArquivo: TMenuItem;
  public
    procedure AfterConstruction; override;
  end;

var
  FormPrincipal: TFormPrincipal;

implementation

{$R *.dfm}

procedure TFormPrincipal.AfterConstruction;
begin
  inherited;
  dmConexao := TdmConexao.Create(Self);
  dmConexao.Configurar;
  Caption := 'Posto ABC - Sistema de Abastecimento';
end;

end.
