  object DsRel: TDataSource
    DataSet = FDQueryRel
    Left = 376
    Top = 145
  end
  object FDQueryRel: TFDQuery
    DetailFields = 
      'DIA;TANQUE;BOMBA;VALOR_MEDIO_LITRO;TOTAL_LITROS;TOTAL_BRUTO;TOTA' +
      'L_IMPOSTO;TOTAL_LIQUIDO'
    SQL.Strings = (
      'SELECT'
      '  CAST(A.DATA_HORA AS DATE) AS DIA,'
      '  T.NOME AS TANQUE,'
      '  B.CODIGO AS BOMBA,'
      '  AVG(A.VALOR_LITRO) AS VALOR_MEDIO_LITRO,'
      '  SUM(A.QUANTIDADE_LITROS) AS TOTAL_LITROS,'
      '  SUM(A.VALOR_BRUTO) AS TOTAL_BRUTO,'
      '  SUM(A.VALOR_IMPOSTO) AS TOTAL_IMPOSTO,'
      '  SUM(A.VALOR_BRUTO - A.VALOR_IMPOSTO) AS TOTAL_LIQUIDO'
      'FROM ABASTECIMENTO A'
      'JOIN BOMBA  B ON B.BOMBA_ID = A.BOMBA_ID'
      'JOIN TANQUE T ON T.TANQUE_ID = B.TANQUE_ID'
      'WHERE 0=1'
      'GROUP BY 1,2,3'
      'ORDER BY 1,2,3')
    Left = 320
    Top = 145
  end
